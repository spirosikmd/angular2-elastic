{
  "name": "angular2-elastic-input",
  "version": "0.0.0-development",
  "description": "Angular attribute directive that adjusts the width of a text input while typing",
  "main": "src/index.js",
  "typings": "src/index.d.ts",
  "scripts": {
    "test": "karma start",
    "lint": "tslint -c tslint.json 'index.ts src/**/*.ts docs/**/*.ts'",
    "start": "ngc",
    "prepublish": "ngc",
    "docs": "concurrently \"watchify docs/main.ts -p [ tsify ] -o docs/bundle.js\" \"lite-server\"",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "commit": "git-cz",
    "add-contributor": "all-contributors add",
    "generate-contributors": "all-contributors generate"
  },
  "keywords": [
    "angular",
    "angular2",
    "elastic",
    "input",
    "@angular"
  ],
  "author": "Spyros Ioakeimidis <spyrosikmd@gmail.com> (http://www.spyros.io)",
  "license": "MIT",
  "dependencies": {
    "@angular/core": "^5.0.1"
  },
  "devDependencies": {
    "@angular/common": "^5.0.1",
    "@angular/compiler": "^5.0.1",
    "@angular/compiler-cli": "^5.0.1",
    "@angular/platform-browser": "^5.0.1",
    "@angular/platform-browser-dynamic": "^5.0.1",
    "@angular/platform-server": "^5.0.1",
    "@types/core-js": "^0.9.43",
    "@types/jasmine": "^2.6.0",
    "all-contributors-cli": "^4.5.1",
    "awesome-typescript-loader": "^3.2.3",
    "browserify": "^14.5.0",
    "commitizen": "^2.9.6",
    "concurrently": "^3.5.0",
    "core-js": "^2.5.1",
    "cz-conventional-changelog": "^2.0.0",
    "jasmine-core": "^2.8.0",
    "karma": "^1.7.1",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.5",
    "lite-server": "^2.3.0",
    "null-loader": "^0.1.1",
    "rxjs": "^5.5.0",
    "semantic-release": "^8.2.0",
    "tsify": "^3.0.3",
    "tslint": "^5.8.0",
    "typescript": "2.4.2",
    "wallaby-webpack": "^0.0.42",
    "watchify": "^3.9.0",
    "webpack": "3.8.1",
    "zone.js": "^0.8.18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spirosikmd/angular2-elastic-input"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
